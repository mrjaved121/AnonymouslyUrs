# Server
PORT=5000
CLIENT_URL=http://localhost:3000

# MongoDB (Azure Cosmos DB for Mongo vCore or RU)
MONGO_URI=mongodb+srv://<username>:<password>@<cosmos-account-name>.<region>.mongocluster.cosmos.azure.com/?tls=true&authMechanism=SCRAM-SHA-256&retrywrites=false
DB_NAME=anonymouslyurs

# JWT
JWT_SECRET=change_this_to_a_long_random_secret

# Email (optional)
EMAIL_USER=your_gmail_username@gmail.com
EMAIL_PASS=your_app_password

# Azure Blob Storage (SAS URL to a container, e.g. blogphotos)
# Full SAS URL including container and query string
AZURE_STORAGE_Images_SAS_URL=https://<storage-account>.blob.core.windows.net/<container>?<sas-query>

# Optional alternative pattern if using separate parts
AZURE_BLOB_BASE_URL=https://<storage-account>.blob.core.windows.net
AZURE_CONTAINER_NAME=<container>
AZURE_BLOB_SAS_TOKEN=?sv=...&se=...&sp=...&sr=c&sig=...

# OpenAI (optional)
OPENAI_API_KEY=

# React client override (only for non-proxied setups)
REACT_APP_API_URL=http://localhost:5000/api
